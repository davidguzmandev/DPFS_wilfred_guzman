<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head')  %>
<body>
    <div class="containerCreateProduct">
        <div class="logo">
            <img src="/images/logo.webp" alt="DavidLogo">
        </div>
        <a href="/logout" class="logout-btn">Cerrar Sesión</a>
        <h1>Listado de Productos</h1>
        <h3><%= products.length %> Productos encontrados</h3>
        <p><a href="/listProducts/createProduct" class="editar">Crear Nuevo</a></p>
        <div class="listProduct">
            <% products.forEach(product => { %>
                <div class="containerProduct">
                    <a href="/listProducts/<%= product.id %>">
                        <img src="<%= product.image %>" height="150px" alt="<%= product.name_product %>">
                    </a>
                    <div>
                        <p>Código: <%= product.id %></p>
                        <p>Nombre: <strong><%= product.name_product %></strong></p>
                        <p>Precio: <%= product.price %></p>
                        <p>Color: <%= Array.isArray(product.color) ? product.color.join(', ') : 'No especificado' %></p>
                        <a href="/listProducts/<%= product.id %>" class="editar">Detalle</a>
                        <a href="/listProducts/<%= product.id %>/editProduct" class="editar">Editar</a>
                        <form action="/listProducts/<%= product.id %>?_method=DELETE" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar este producto?');">
                            <button type="submit" class="eliminar">Eliminar</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>
</html>